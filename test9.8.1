#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <string.h>
//目标：
// 1.判断一个数是否为奇数
// 2.输出0~100间的奇数
//1
int main()
{
	int a = 0;
	int b = 0;
	scanf("%d", &a);//scanf输入，要用地址符&
	b = a % 2;
	if (b == 1)
		printf("%d是奇数\n", a);
	else
		printf("%d是偶数\n", a);
}
// 2
// 2
int main()
{
	int a = 0;
	int b = 0;
	printf("0到100之间的奇数有：\n");
	while (a <= 100)//循环语句格式
	{
		b = a % 2;
		if (b == 1)//注意双等号是判断是否相等
			printf("%d\n", a);
		a++;
	}
	return 0;
 } 
